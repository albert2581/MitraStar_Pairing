<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/maintext"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="觀看機上盒影片"
        android:id="@+id/look_setbox_video_button"
        android:layout_below="@+id/maintext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="觀看預錄清單"
        android:id="@+id/pre_recorded_button"
        android:layout_below="@+id/look_setbox_video_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/look_setbox_video_button"
        android:layout_alignEnd="@+id/look_setbox_video_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="觀看已錄清單"
        android:id="@+id/recorded_button"
        android:layout_below="@+id/pre_recorded_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/look_setbox_video_button"
        android:layout_alignEnd="@+id/look_setbox_video_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="觀看機上盒狀態"
        android:id="@+id/sb_status_button"
        android:layout_below="@+id/recorded_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/recorded_button"
        android:layout_alignEnd="@+id/recorded_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遙控器"
        android:id="@+id/remote_button"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/sb_status_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sb_status_button"
        android:layout_alignEnd="@+id/sb_status_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上傳檔案到機上盒"
        android:id="@+id/upload_button"

        android:layout_marginTop="27dp"
        android:layout_below="@+id/remote_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/remote_button"
        android:layout_alignEnd="@+id/remote_button" />

</RelativeLayout>
